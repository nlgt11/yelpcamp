<%- include("../partials/header") %> 
<h2 class="text-center mt-4"> Edit <%= campground.name %> </h2>

<div class="container d-flex justify-content-center mt-4">
    <form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST" class="col-8">
        <div class="form-group">
            <label for="name">Name</label>
            <input class="form-control" type="text" id="name" name="campground[name]" value="<%= campground.name %> ">
        </div>
        <div class="form-group">
            <label for="image">Image</label>
            <input class="form-control" type="text" id="image" name="campground[image]" value="<%= campground.image %> ">
        </div>
        <div class="form-group">
            <label for="description">Image</label>
            <input class="form-control" type="text" id="description" name="campground[description]" value="<%= campground.description %> ">
        </div>
        <div class="text-center">
            <button class="btn btn-primary w-100">Submit</button>
        </div>
        <a href="/campgrounds/ <%= campground._id %> ">Go back</a>
    </form>
</div>

<%- include("../partials/footer") %> 